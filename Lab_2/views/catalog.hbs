{{> head}}
<body>
    {{> navbar}}
    <div class="catalog">
        {{#each products}}
        <div class="product-main">
            <div class="product">
                <h2 class="ref">{{this.title}}</h2>
                <div class="product-img"><img src="/images/paint.jpg" height="200" width="200"alt=""></div>
                <div class="tit">{{this.description}}</div>
                <p class="price">{{this.price}} <span>руб</span><a href="/cart/{{this._id}}" ><img src="/images/basket.png" class="bas" height="28" width="28" alt=""></a></p>


            </div>
            <p class="bot-dot"></p>
        </div>
        {{/each}}
        
        
    </div>
    <a href="/" class="home">Вернуться на главную</a>
    
    {{> footer}}
</body>
</html>